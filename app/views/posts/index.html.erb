<h1>Basic Blog Homepage</h1>

<h2>Here are your posts:</h2>

<table>
  <thead>
    <th>ID.</th>
    <th>Title.</th>
    <th>Content.</th>
    <th>Image.</th>
    <th>Category.</th>
    <th>Comment number.</th>
    <th>Username.</th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
        <tr>
          <td class="id"><%= post.id %></td>
          <td class="title"><%= post.title %></td>
          <td class="content"><%= post.content %></td>
          <td class="image"><img src="<%= post.image %>" alt=""></td>
          <td class="category"><%= post.category %></td>
          <td class="comments"><a href="/posts/<%=post.id%>/comments"><%= post.comments.count %></a></td>
          <td class="user"><%= post.user.username %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "delete", "posts/delete", :method => 'delete' %>
